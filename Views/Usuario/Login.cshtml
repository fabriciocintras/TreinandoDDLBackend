@model Usuario
@{
    ViewData["Title"]= "Login de Usuario";
}
<p>@ViewBag.Mensagem</p>
<h2>Login de usuario</h2>
<p></p>
<form asp-action="Login" method="post">
    <p>
        <label asp-for="Nome">Nome: </label>
        <input asp-for="Nome">
    </p>
    <p>
        <label asp-for="Senha">Senha: </label>
        <input asp-for="Senha">
    </p>
    <p>
         <input type="submit" value="Entrar">
    </p>
</form>